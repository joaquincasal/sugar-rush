{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": 0,
        "no-underscore-dangle": 0,
        "func-names": [2, "never"],
        "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
        "no-unused-vars": [1, { "argsIgnorePattern": "res|next|^err" }],
        "consistent-return": 0,
        "no-param-reassign": 0
    },
    "ignorePatterns": [ 
        "public/dist/",
        "data/load-sample-data.js"
    ]
}